.qa {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
  background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  margin: 0 0 10rpx 0;
  box-shadow: 0rpx 4rpx 10rpx #7acfa6;
}

.qa text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
  max-width: 700rpx;
  font-size: 24rpx;
  line-height: 36rpx;
}

.qa text:nth-child(1) {
  color: #222222;
  font-weight: bolder;
  line-height: 60rpx;
  font-size: 32rpx;
}

.qa text:nth-child(3) {
  color: #F2646D;
}

.no-data {
  position: relative;
  top: 50%;
  transform: translateY(-70%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-data text {
  margin-top: 20rpx;
  color: #959595;
  font-size: 24rpx;
}

.no-data image {
  width: 200rpx;
  height: 200rpx;
}

.no-more {
  text-align: center;
  color: #b3b3b3;
  padding: 16rpx 0;
  font-size: 24rpx;
  animation: no-more-animation 2.5s;
  animation-fill-mode: forwards;
  background: -webkit-linear-gradient(-40deg, white, #7acfa6);
}

@keyframes no-more-animation {
  10% {
    opacity: 0.9;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  20% {
    opacity: 1;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }
  70% {
    opacity: 0.9;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  75% {
    opacity: 0.8;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  80% {
    opacity: 0.7;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  85% {
    opacity: 0.6;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  90% {
    opacity: 0.5;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  95% {
    opacity: 0.4;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  96% {
    opacity: 0.3;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  97% {
    opacity: 0.2;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  98% {
    opacity: 0.1;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }

  100% {
    opacity: 0;
    background: -webkit-linear-gradient(-40deg, white, #7acfa6);
  }
}